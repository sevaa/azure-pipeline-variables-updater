{
  "manifestVersion": 1,
  "id": "variableupdater",
  "name": "Shared Variable Updater",
  "version": "1.0.5",
  "publisher": "sevaalekseyev",
  "public": true,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "repository": {
    "type": "git",
    "uri": "https://github.com/sevaa/azure-pipeline-variables-updater/"
  },
  "links": {
    "repository": { "uri": "https://github.com/sevaa/azure-pipeline-variables-updater/"},
    "issues": { "uri": "https://github.com/sevaa/azure-pipeline-variables-updater/issues"},
    "support": {"uri": "https://github.com/sevaa/azure-pipeline-variables-updater/issues"},
    "privacypolicy": {"uri": "https://github.com/sevaa/azure-pipeline-variables-updater/blob/master/PRIVACY.md"}
  },
  "scope": [
    "vso.build",
    "vso.release"
  ],
  "description": "Task to update a variable in a variable group (library)",
  "categories": [
    "Azure Pipelines"
  ],
  "tags": [
    "Build",
    "Release",
    "Variable",
    "Pipeline",
    "Azure DevOps"
  ],
  "content": {
    "license": { "path": "license.txt" },
    "details": { "path": "readme.md" },
    "privacypolicy": { "path": "privacy.md" }
  },
  "icons": {
    "default": "icon.png"
  },
  "contributions": [
    {
      "id": "variableupdater",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "variableupdater"
      }
    }
  ],
  "files": [
    {
      "path": "variableupdater/run-task.js"
    },
    {
      "path": "variableupdater/node_modules"
    },    
    {
      "path": "variableupdater/task.json"
    },
    {
      "path": "variableupdater/icon.png"
    }
  ]
}
